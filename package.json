    "nodemon": "^2.0.7",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  },
  "files": [
    "lib/**/*"
  ],
  "homepage": "https://github.com/rainbunny/api-core#readme",
  "keywords": [
    "pg",
    "postgres",
    "typescript",
    "nodejs",
    "graphql"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "name": "@rainbunny/api-core",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rainbunny/api-core.git"
  },
  "scripts": {
    "build": "rm -r -f lib && babel src --out-dir lib --extensions \".ts\" --source-maps inline --copy-files && tsc --project tsconfig.definition.json",
    "lint": "prettier --check . && eslint . --ext .js,.jsx,.ts,.tsx && tsc --noEmit",
    "lint-fix": "prettier --write . && eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "yarn build",
    "prepublishOnly": "yarn validate",
    "push": "git push && git push --tags",
    "test": "jest",
    "validate": "yarn lint && yarn test",
    "version": "yarn validate && git add -A src"
  },
  "types": "lib/index.d.ts",
  "version": "0.2.2"
}
